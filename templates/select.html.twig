<form class="d-flex align-items-center my-3">
    <label for="themeSelector" class="pe-2">
        <i class="icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="1.5rem" height="1.5rem" viewBox="0 0 16 16"><path fill="currentColor" d="M8 15A7 7 0 1 0 8 1zm0 1A8 8 0 1 1 8 0a8 8 0 0 1 0 16"></path></svg>
        </i>
    </label>
    <select class="form-select" aria-label="Theme selector" id="themeSelector" style="width: auto;">
        <option value="dark">Dark mode</option>
        <option value="light">Light mode</option>
        {% if bs_theme_switch_has_sync_mode|default(1) is same as (1) %}
            <option value="system">Sync with system</option>
        {% endif %}
    </select>
</form>
